<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:paddingBottom="3dip"
        android:paddingTop="3dip">

        <TextView
            android:id="@+id/txt_lokasi_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_lokasi_no_toko"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="Nama Lokasi"
            android:textColor="#333232"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_lokasi_alamat_toko"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_lokasi_no_toko"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="ALamat"
            android:textColor="#9d9d9d"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_lokasi_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_lokasi_alamat_toko"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Status"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="normal" />

    </RelativeLayout>

</LinearLayout>